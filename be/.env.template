# Environment Variables Template
# Copy this to .env.local and fill in your actual values
# NEVER commit .env.local to git!

# =================================================
# SUPABASE
# Get these from: https://app.supabase.com/project/_/settings/api
# =================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
DATABASE_URL=postgresql://postgres:[PASSWORD]@db.your-project.supabase.co:5432/postgres

# =================================================
# N8N
# Get these from: https://app.n8n.cloud/settings
# =================================================
N8N_WEBHOOK_URL=https://your-workspace.n8n.app/webhook
N8N_API_KEY=n8n_api_your_key_here

# =================================================
# AI APIS
# =================================================

# Google Gemini Pro
# Get from: https://ai.google.dev
GEMINI_API_KEY=AIzaSy_your_key_here

# Anthropic Claude (Backup AI)
# Get from: https://console.anthropic.com
CLAUDE_API_KEY=sk-ant-your_key_here

# OpenAI GPT-4o (Optional fallback)
# Get from: https://platform.openai.com
OPENAI_API_KEY=sk-your_key_here

# =================================================
# WEB SCRAPING
# =================================================

# Firecrawl (Competitor research)
# Get from: https://firecrawl.dev
FIRECRAWL_API_KEY=fc-your_key_here

# =================================================
# IMAGE GENERATION
# =================================================

# Replicate (Flux.1)
# Get from: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=r8_your_token_here

# =================================================
# SOCIAL MEDIA
# =================================================

# Ayrshare (Social publishing)
# Get from: https://app.ayrshare.com/profile
AYRSHARE_API_KEY=your-api-key-here

# =================================================
# EMAIL
# =================================================

# MailerLite (Email list)
# Get from: https://dashboard.mailerlite.com/integrations/api
MAILERLITE_API_KEY=your_api_key_here

# Resend (Transactional emails - optional)
# Get from: https://resend.com/api-keys
RESEND_API_KEY=re_your_key_here

# SMTP for n8n email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
ADMIN_EMAIL=admin@yourdomain.com

# =================================================
# MONITORING
# =================================================

# BetterUptime (Monitoring)
# Get from: https://betteruptime.com
BETTERUPTIME_API_KEY=your_key_here

# Plausible Analytics (Optional)
PLAUSIBLE_DOMAIN=yourdomain.com

# =================================================
# SITE CONFIGURATION
# =================================================
NEXT_PUBLIC_SITE_URL=https://yourdomain.com
NEXT_PUBLIC_SITE_NAME=Your Affiliate Site Name
NEXT_PUBLIC_SITE_DESCRIPTION=Discover and review the best [niche] tools
NEXT_PUBLIC_NICHE_CATEGORY=AI productivity tools

# For development
# NEXT_PUBLIC_SITE_URL=http://localhost:3000

# =================================================
# AFFILIATE PROGRAMS
# =================================================

# Amazon Associates
AMAZON_ASSOCIATE_TAG=your-tag-20
AMAZON_ACCESS_KEY=your_access_key
AMAZON_SECRET_KEY=your_secret_key

# ShareASale
SHAREASALE_AFFILIATE_ID=your_id
SHAREASALE_API_TOKEN=your_token
SHAREASALE_API_SECRET=your_secret

# Impact.com
IMPACT_ACCOUNT_SID=your_sid
IMPACT_AUTH_TOKEN=your_token

# CJ Affiliate
CJ_WEBSITE_ID=your_website_id
CJ_PERSONAL_ACCESS_TOKEN=your_token

# =================================================
# SEARCH APIS (for WF1 - Trend Discovery)
# =================================================

# Product Hunt (Optional)
PRODUCT_HUNT_TOKEN=your_token_here

# Reddit (Optional - uses public API by default)
REDDIT_CLIENT_ID=your_client_id
REDDIT_CLIENT_SECRET=your_secret

# SerpAPI (Alternative to Google Trends - optional)
SERPAPI_KEY=your_key_here

# =================================================
# VERCEL DEPLOYMENT
# =================================================

# Vercel Deploy Hook (for WF7 - Publisher)
VERCEL_DEPLOY_HOOK=https://api.vercel.com/v1/integrations/deploy/prj_xxx/xxx

# =================================================
# GOOGLE INDEXING
# =================================================

# Google Indexing API
# Follow: https://developers.google.com/search/apis/indexing-api/v3/prereqs
GOOGLE_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"

# =================================================
# RATE LIMITING & CACHING
# =================================================

# Upstash Redis (Optional - for rate limiting)
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_token

# =================================================
# FEATURE FLAGS
# =================================================

# Enable/disable workflows
ENABLE_AUTO_APPROVAL=false
ENABLE_AUTO_PUBLISH=false
QUALITY_THRESHOLD=75

# Min quality scores
MIN_TOPIC_QUALITY=60
MIN_ARTICLE_QUALITY=70

# Content preferences
DEFAULT_ARTICLE_LENGTH=medium
DEFAULT_TONE=professional
INCLUDE_COMPETITOR_ANALYSIS=true

# =================================================
# DEVELOPMENT
# =================================================

# Set to 'development' or 'production'
NODE_ENV=development

# Show debug logs
DEBUG=false

# Mock external APIs (for testing without spending $)
MOCK_GEMINI=false
MOCK_FIRECRAWL=false
MOCK_REPLICATE=false

# =================================================
# SECURITY
# =================================================

# JWT secret for API authentication
JWT_SECRET=your_super_secret_jwt_key_min_32_chars

# Admin password hash (for basic auth)
ADMIN_PASSWORD_HASH=your_bcrypt_hash_here

# Webhook verification secrets
N8N_WEBHOOK_SECRET=your_webhook_secret
VERCEL_WEBHOOK_SECRET=your_vercel_secret

# =================================================
# NOTES
# =================================================

