        {
            "parameters": {
                "jsCode": "// Get data from previous nodes\nconst webhookData = $('Webhook Trigger').first().json.body;\nconst scrapeData = $('Scrape Product').first().json;\nconst monetizeData = $('Monetize Link').first().json;\n\n// Check if scraping was successful\nif (!scrapeData.success || !scrapeData.data) {\n  throw new Error('Product scraping failed');\n}\n\nconst product = scrapeData.data;\nconst affiliateLink = monetizeData.affiliate_url || webhookData.url;\n\n// Extract and parse prices\nconst currentPriceStr = (product.currentPrice || '0').replace(/[^0-9.]/g, '');\nconst originalPriceStr = (product.originalPrice || '0').replace(/[^0-9.]/g, '');\nconst currentPrice = parseFloat(currentPriceStr) || 0;\nconst originalPrice = parseFloat(originalPriceStr) || currentPrice;\n\n// Calculate discount\nconst discount = originalPrice > currentPrice \n  ? Math.round(((originalPrice - currentPrice) / originalPrice) * 100)\n  : 0;\n\n// Create Telegram message with HTML formatting\nconst title = product.title || 'Product Deal';\nconst message = `<b>${title}</b>\\n\\n` +\n  `ðŸ”¥ <b>Deal Alert!</b>\\n` +\n  (discount > 0 \n    ? `ðŸ’° Only <b>â‚¹${currentPrice.toLocaleString('en-IN')}</b> <s>â‚¹${originalPrice.toLocaleString('en-IN')}</s> (${discount}% OFF)\\n\\n` \n    : `ðŸ’° Price: <b>â‚¹${currentPrice.toLocaleString('en-IN')}</b>\\n\\n`) +\n  `ðŸ‘‡ Grab it now:\\n` +\n  `<a href=\"${affiliateLink}\">ðŸ‘‰ CLICK HERE TO BUY</a>`;\n\nreturn {\n  json: {\n    chat_id: process.env.TELEGRAM_CHANNEL_ID || '@deals_fiesta',\n    text: message,\n    parse_mode: 'HTML',\n    disable_web_page_preview: false,\n    product_title: title,\n    affiliate_url: affiliateLink\n  }\n};"
            },
